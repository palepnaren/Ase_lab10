<!DOCTYPE html>
<html lang="en">
<head>
    <title>Users</title>
    <% include partials/Head.ejs %>
</head>

<body>

    <div id="wrapper">


        <!-- Page Content -->
        <div id="page-content-wrapper">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12">
                       <br/><br/>
                       <table class="table table-striped well">
                       <thead>
                         <tr>
                           <th>Full Name</th>
                           <th>Email</th>
                           <th>Username</th>
                           <th>Age</th>
                           </tr>
                           </thead>
    <tbody>
      <% if( typeof(users) !== 'undefined' ) {%>

           <% for(var i=0; i < users.length; i++) { %>
      <tr>
        <td><%=users[i].name%></td>
        <td><%=users[i].email%></td>
        <td><%=users[i].username%></td>
        <td><%=users[i].age%></td>
      </tr>
    </tbody>
    <% } %>
<%}%>
  </table>



                               <br/><br/>

<form class="form-group" method="post" action="/delete" align="center">
  <% if( typeof(errorMessage) !== 'undefined' ) {%>
  <h5 align="center" class="margin-base-vertical"><code><%=errorMessage%></code></h5>
  <%}%><br/>
<input type="text" class="form-control input-lg" name="name" placeholder="Full name" required> <br/>
<button class="btn btn-danger"> delete </button>
</form>
<form class="form-group" method="post" action="/update" align="center">
  <% if( typeof(errorMessage) !== 'undefined' ) {%>
  <h5 align="center" class="margin-base-vertical"><code><%=errorMessage%></code></h5>
  <%}%><br/>
<input type="text" class="form-control input-lg" name="name" placeholder="Full name" required> <br/>
<input type="number" class="form-control input-lg" name="age" placeholder="age" required> <br/>
<input type="text" class="form-control input-lg" name="username" placeholder="username" required> <br/>
<button class="btn btn-success" > update </button>
</form>
<br/><br/>
<p><b><a href="/logout"> click here to logout.</a></b></p><br/>




                    </div>
                </div>
            </div>
        </div>


    </div>
    <% include partials/Footer.ejs %>
    </script>

</body>

</html>
